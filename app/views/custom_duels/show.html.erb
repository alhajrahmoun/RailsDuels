<%= turbo_stream_from "custom_duel_#{@duel.id}" %>

<% if @duel.starting? %>
  <%= render 'custom_duels/starting', duel: @duel %>
<% else %>
  <div class="row">
    <div class="col-4">
      <%= render 'custom_duels/duel_progress', duel: @duel, user: current_user %>
    </div>

    <div class="col-8">
      <%= render 'custom_duels/duel', duel: @duel %>
    </div>
  </div>
<% end %>
