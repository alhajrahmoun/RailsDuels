<div class="container d-flex justify-content-center">
  <div class="col-6">
    <div class="mb-3">
      <h3>Set your difficulty level</h3>
    </div>

    <%= form_for current_user, url: update_user_level_path do |f| %>
      <div class="mb-3">
        <%= f.select :level, User.levels.keys, {}, class: 'form-select' %>
      </div>

      <div class="mb-3">
        <%= f.submit "Update", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>