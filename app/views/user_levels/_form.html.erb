<div class="mb-3">
  <h3>Set your difficulty level</h3>
</div>

<div class="alert alert-danger" role="alert">
  <%= t('hints.settings_change') %>
</div>

<%= form_for current_user, url: update_user_level_path, data: { turbo_confirm: 'Are you sure?' } do |f| %>
  <div class="mb-3">
    <%= f.select :level, User.levels.keys, { include_blank: 'Please select your difficulty level' }, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.submit "Update", class: 'btn btn-primary' %>
  </div>
<% end %>