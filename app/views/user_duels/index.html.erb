<div class="row mb-3 text-center">
  <h2 class="mb-3">Duels (<%= current_user.points %> <%= 'points'.pluralize(current_user.points) %>)</h2>

  <div class="col">
    <table class="table table-borderless">
      <thead>
      <tr>
        <th>Date</th>
        <th>Winner</th>
        <th>Winner's points</th>
        <th>Level</th>
      </tr>
      </thead>
      <% @user_duels.each do |duel| %>
        <tr class="<%= duels_table_row_color(duel) %>">
          <td><%= duel.created_at.to_date %></td>
          <td><%= duel.winner&.username || '(Tie)' %></td>
          <td><%= duel.winner_points %></td>
          <td><%= duel.complexity %></td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="d-flex justify-content-center my-3">
    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
